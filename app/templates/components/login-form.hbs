{{#bs-form formLayout="vertical" onSubmit=(action 'authenticate') as |form|}}
  {{#form.group}}
    <label for="identification" class="control-label">Login</label>
    <input id="username" placeholder="Username" class="form-control" type="text">
  {{/form.group}}
  {{#form.group}}
    <label class="control-label" for="password">Password</label>
    <input id="password" placeholder="Password" type="password" class="form-control">
  {{/form.group}}
  <button type="submit">Login</button>
  {{#if errorMessage}}
    <p>{{errorMessage}}</p>
  {{/if}}
{{/bs-form}}
