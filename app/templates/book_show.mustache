<div class="row">
  <div class="col-md-6">
    <div class="pull-right">
      <img src="{{cover}}" class="img-thumbnail img-responsive" alt="{{cover_alt}}">
      <p><a href={{link}}>Google Books info</a></p>
    </div>
    <h1><em>{{title}}</em> {{{external_link}}}</h1>
    <h3>{{author}}, {{year}} <small>(isbn: {{isbn}})</small></h3>
    <h4>Download:</h4>
    <h4>Instances as <a href="/books/{{slug}}/csv" class="btn btn-default" role="button">.csv</a></h4>
    <h4>Places as
      <span class="btn-group" role="group">
        <a href="/books/{{slug}}/geojson" class="btn btn-default btn-small" role="button">GeoJSON</a>
        <a href="/books/{{slug}}/places-csv" class="btn btn-default btn-small" role="button">.csv</a>
        <a href="/books/{{slug}}/csv-zip" class="btn btn-default btn-small" role="button">.zip of special.csvs</a>
      </span>
    </h4>
    {{#book_permitted}}
    <a href="/books/{{slug}}/instances/new" class="btn btn-primary btn-default" role="button">Add instance</a>
    {{/book_permitted}}
    <h2>Instances:</h2>
    <table class="table table-hover">
      <thead>
        {{#book_permitted}}
          <th>&nbsp;</th>
        {{/book_permitted}}
        <th>&nbsp;</th>
        <th>&nbsp;</th>
        <th>Page</th>
        <th>Order</th>
        <th>Place</th>
        {{#special_field}}
        <th>{{special_field}}</th>
        {{/special_field}}
        {{#book_permitted}}
          <th>&nbsp;</th>
        {{/book_permitted}}
      </thead>
      <tbody>
        {{#instances}}
        <tr>
          {{#book_permitted}}
            <td>
            {{#instance_permitted}}
              <a href="/books/{{slug}}/instances/{{instance_id}}/edit" class="btn btn-primary btn-small">Edit</a>
            {{/instance_permitted}}
            {{^instance_permitted}}
              {{owner}}
            {{/instance_permitted}}
            </td>
          {{/book_permitted}}
          <td>
            {{#flagged}}
              <span class="glyphicon glyphicon-flag" aria-hidden="true"></span>
            {{/flagged}}
            {{^flagged}}
              &nbsp;
            {{/flagged}}
          </td>
          <td>
            {{#note}}
              <span class="glyphicon glyphicon-comment" aria-hidden="true"></span>
            {{/note}}
            {{^note}}
              &nbsp;
            {{/note}}
          </td>
          <td>
            {{page}}
          </td>
          <td>
            {{sequence}}
          </td>
          <td>
            <a href="/places/{{place_slug}}/">{{place_name}}</a>
          </td>
          {{#special_field}}
            <td>{{special}}</td>
          {{/special_field}}
          {{#book_permitted}}
            <td>
              {{#instance_permitted}}
                <form action="/books/{{slug}}/instances/{{instance_id}}/delete" method="POST">
                  <button role="button" type="submit" class="btn btn-danger btn-small">Delete</button>
                </form>
              {{/instance_permitted}}
              {{^instance_permitted}}
                &nbsp;
              {{/instance_permitted}}
            </td>
          {{/book_permitted}}
        </tr>
        {{/instances}}
        {{^instances}}
        <tr>
          <td colspan="3">No instances recorded, yet.</td>
        </tr>
        {{/instances}}
      </tbody>
    </table>

  </div>
  <div class="col-md-6">
    {{> partials/all_places_map}}
  </div>
</div>
