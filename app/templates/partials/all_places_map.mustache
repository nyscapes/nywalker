      <div id="map">
      </div>
      <script>
        var map = L.map('map').setView([0,0], 1);
        var baseLayer = L.tileLayer.provider('OpenStreetMap.Mapnik').addTo(map);
        var dots = L.markerClusterGroup();
        {{#places}}
        dots.addLayer(L.circleMarker([{{lat}}, {{lon}}]).bindPopup("<h4><a href='/places/{{slug}}'>{{name}}</a></h4><small>Mentions: {{count}}</small>"));
        {{/places}}
        map.addLayer(dots);
        map.fitBounds(dots.getBounds());
      </script>
