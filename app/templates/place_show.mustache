<div class="row">
  <div class="col-md-6">
    <h1>{{name}}<br />
      <small>Added by {{user}} on {{added_on}}</small>
    </h1>
    <ul>
      <li>Source: {{{source_link}}} (Confidence: {{confidence}})</li>
      <li>Latitude: {{lat}}, Longitude: {{lon}}</li>
      {{#w3w}}
        <li><a href="http://what3words.com/" target="_blank">What3Words</a> name: {{w3w}}
      {{/w3w}}
    </ul>

    <p>Known as: {{nicknames_sentence}} </p>

    {{#note?}}
      <div class="card">
        <div class="card-block">
          <h4 class="card-title">Note</h4>
          <p class="card-text">{{note}}</p>
        </div>
      </div>
    {{/note?}}
    
    {{#logged_in}}
      <div class="btn-group" role="group">
        {{{ flag_modal_button }}}
    {{/logged_in}}
      {{#place_permitted}}
          <button type="button" class="btn btn-warning" data-toggle="modal" data-target="#editPlaceModal">Edit</button>
          <button role="button" class="btn btn-danger" id="deleteButton">Delete</button>
        {{#flagged}}
            <button role="button" class="btn btn-info" id="unflagButton">Unflag</button>
        {{/flagged}}
      </div>
      {{/place_permitted}}

    {{#flagged}}
      {{> partials/flag_table }}
    {{/flagged}}
    <form action="/places/{{slug}}/delete" method="POST" id="deleteForm"></form>
    <form action="/places/{{slug}}/unflag" method="POST" id="unflagForm"></form>
  </div>
  <div style="height: {{map_height}}" class="map col-md-6" id="map">
  </div>
  <script>
    var center = L.latLng({{lat}}, {{lon}});
    // Need to initialize at 0,0 so that the later call of fitBounds doesn't crash the map.
    var map = L.map('map').setView([0,0], 15);
    var baseLayer = L.tileLayer.provider('OpenStreetMap.Mapnik').addTo(map);
    var marker = L.marker(center).addTo(map);
    {{{bounding_box_polygon}}}
    map.panTo(center);

    $('#deleteButton').click(function(){ $('#deleteForm').submit(); });
    $('#unflagButton').click(function(){ $('#unflagForm').submit(); });
  </script>
</div>
<h2>In books: <small>(All instances link)</small></h2>
<table class="table table-sm m-3 table-hover">
  <thead class="thead-inverse">
    <th>Book</th>
    <th>Instances</th>
  </thead>
  <tbody>
    {{#books}}
    <tr>
      <td>
        <a href="/books/{{book_slug}}">{{book_title}}</a>
      </td>
      <td>
        {{instances}}
      </td>
    {{/books}}
    {{^books}}
    <tr>
      <td colspan="2">No instances recorded, yet.</td>
    </tr>
    {{/books}}
  </tbody>
</table>
<div class="modal fade" id="editPlaceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title" id="myModalLabel">Edit {{name}} (slug: {{slug}})</h4>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body">
        {{> partials/edit_place_form }}
      </div>
    </div>
  </div>
</div>
{{#logged_in}}
  {{> partials/flag_modal }}
{{/logged_in}}
