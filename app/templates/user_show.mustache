<h1>{{name}}</h1>
<h3>{{username}}</h3>

{{#change_password}}
  <button type="button" class="btn btn-danger btn-default" data-toggle="modal" data-target="#changePasswordModal">Change password</button>
{{/change_password}}

<ul>
  {{#admin?}}
    <li>Email: {{email}}</li>
  {{/admin?}}
  <li>Admin: {{#admin}}<span class="glyphicon glyphicon-ok"></span>{{/admin}}</li>
  <li>Added on: {{added_on}}</li>
</ul>

<div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingInstances">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseInstances" aria-expanded="true" aria-controls="collapseInstances">
          Instances: {{instance_count}}
        </a>
      </h4>
    </div>
    <div id="collapseInstances" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingInstances">
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <th>Id</th>
            <th>Book</th>
            <th>Place</th>
            <th>Page</th>
            <th>Sequence</th>
          </thead>
          <tbody>
            {{#instances}}
              <tr>
                <td>
                  <a href="/users/{{username}}/instances/{{i_id}}">
                    {{i_id}}
                  </a>
                </td>
                <td>
                  <a href="/books/{{i_book_slug}}">
                    {{i_book}}
                  </a>
                </td>
                <td>
                  <a href="/places/{{i_place_slug}}">
                    {{i_place}}
                  </a>
                </td>
                <td>{{i_page}}</td>
                <td>{{i_sequence}}</td>
              </tr>
            {{/instances}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingPlaces">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapsePlaces" aria-expanded="true" aria-controls="collapsePlaces">
          Places: {{place_count}}
        </a>
      </h4>
    </div>
    <div id="collapsePlaces" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingPlaces">
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <th>Place</th>
            <th>Instances</th>
          </thead>
          <tbody>
            {{#places}}
              <tr>
                <td>
                  <a href="/places/{{p_slug}}">
                    {{p_name}}
                  </a>
                </td>
                <td>{{p_instances}}</td>
              </tr>
            {{/places}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading" role="tab" id="headingBooks">
      <h4 class="panel-title">
        <a class="collapsed" role="button" data-toggle="collapse" data-parent="#accordion" href="#collapseBooks" aria-expanded="true" aria-controls="collapseBooks">
          Books: {{book_count}}
        </a>
      </h4>
    </div>
    <div id="collapseBooks" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingBooks">
      <div class="panel-body">
        <table class="table table-hover">
          <thead>
            <th>Book</th>
            <th>Instances</th>
          </thead>
          <tbody>
            {{#books}}
              <tr>
                <td>
                  <a href="/books/{{b_slug}}">
                    {{b_title}}
                  </a>
                </td>
                <td>{{b_instances}}</td>
              </tr>
            {{/books}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
{{#change_password}}
  {{> partials/password_modal}}
{{/change_password}}

