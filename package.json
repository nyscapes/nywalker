{
  "prettier": {
    "singleQuote": false
  },
  "xo": {
    "envs": [
      "amd"
    ],
    "globals": [
      "it",
      "describe"
    ],
    "prettier": true,
    "space": true,
    "rules": {
      "require-await": 0,
      "quotes": [
        "error",
        "double"
      ]
    },
    "overrides": [
      {
        "files": "features/**/*.js",
        "rules": {
          "new-cap": 0
        }
      }
    ]
  },
  "dependencies": {
    "node-couchdb": "^1.3.0"
  }
}
